---
import Dark from "./Dark.astro";
import { SITE_INFO } from "../consts";
---
<style>
    header {
        position: relative;
        height: 38vh;
        background-color: rgb(87, 87, 87);
        background-image: var(--wallpaper);
        background-repeat: no-repeat;
        background-position: center bottom 28%;
        background-size: cover;
    }
    /* 查看大图 */
    .view-img {
        display: block;
        max-width: 100%;
        max-height: 100%;
    }
    .view-box-show {
        display: flex;
        justify-content: center;
        align-items: center;
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(51, 51, 51, 0.98);
        z-index: 999999;
        overflow-x: scroll;
    }
    .view-box-hide {
        display: none;
    }
</style>
<header style={`--wallpaper: url('${SITE_INFO.wallpaper}')`}>
    <Dark />
    <section class="view-box" id="view-box">
        <img src="" class="view-img" id="view-img"/>
    </section>
</header>
