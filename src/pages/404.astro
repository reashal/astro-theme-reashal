---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ERROR_404 } from '../consts';
---

<BaseLayout pageTitle={ERROR_404.title} pageDescription={ERROR_404.description}>
    <div class="not-found-container">
        <div class="not-found-content">
            <div class="not-found-number">404</div>
            <h1 class="not-found-title">{ERROR_404.errorTitle}</h1>
            <p class="not-found-desc">{ERROR_404.errorDesc}</p>
            <div class="not-found-buttons">
                <button onclick="window.history.back()" class="btn-back">
                    <i class="iconfont icon-arrow-left"></i> {ERROR_404.backText}
                </button>
                <a href="/" class="btn-home">
                    <i class="iconfont icon-Home"></i> {ERROR_404.homeText}
                </a>
            </div>
            <div class="not-found-quote">
                <p>"{ERROR_404.quote}"</p>
            </div>
        </div>
    </div>
    <style>
        .not-found-container {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            flex: 1;
        }

        .not-found-content {
            text-align: center;
            max-width: 500px;
            width: 100%;
            padding: 2rem 0.5rem;
        }

        .not-found-number {
            font-size: 5rem;
            font-weight: 700;
            margin: 0;
            background: linear-gradient(45deg, #007175, #82d8dd);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            line-height: 1;
            animation: float 3s ease-in-out infinite;
        }

        .not-found-title {
            font-size: 1.4rem;
            margin: 0.5rem 0 0.3rem;
        }

        .not-found-desc {
            font-size: 1rem;
            margin-bottom: 0.8rem;
            color: #666;
        }

        .not-found-buttons {
            display: flex;
            gap: 0.8rem;
            justify-content: center;
            flex-wrap: wrap;
            margin-bottom: 0.8rem;
        }

        .btn-back,
        .btn-home {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            padding: 0.6rem 1.2rem;
            border-radius: 0.5rem;
            font-size: 0.95rem;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
            border: 2px solid #007175;
        }

        .btn-back {
            background-color: transparent;
            color: #007175;
        }

        .btn-back:hover {
            background-color: #007175;
            color: white;
            transform: translateY(-2px);
        }

        .btn-home {
            background-color: #007175;
            color: white;
        }

        .btn-home:hover {
            background-color: #005a5e;
            transform: translateY(-2px);
        }

        .not-found-quote {
            font-style: italic;
            color: #888;
            font-size: 0.85rem;
            margin-top: 0.8rem;
            padding: 0.6rem;
            border-top: 1px solid #eee;
            border-bottom: 1px solid #eee;
        }

        @keyframes float {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-10px);
            }
        }

        html.dark .not-found-title,
        body.dark .not-found-title {
            color: #dcebf2;
        }

        html.dark .not-found-desc,
        body.dark .not-found-desc {
            color: #a0b4c0;
        }

        html.dark .not-found-quote,
        body.dark .not-found-quote {
            color: #888;
            border-color: rgba(130, 216, 221, 0.2);
        }

        html.dark .btn-back,
        body.dark .btn-back {
            color: #82d8dd;
            border-color: #82d8dd;
        }

        html.dark .btn-back:hover,
        body.dark .btn-back:hover {
            background-color: #82d8dd;
            color: #1e293b;
        }

        html.dark .btn-home,
        body.dark .btn-home {
            background-color: #82d8dd;
            color: #1e293b;
            border-color: #82d8dd;
        }

        html.dark .btn-home:hover,
        body.dark .btn-home:hover {
            background-color: #a8e5e9;
        }

        @media (max-width: 480px) {
            .not-found-number {
                font-size: 3.5rem;
            }

            .not-found-content {
                padding: 1.5rem 0.5rem;
            }

            .not-found-title {
                font-size: 1.1rem;
                margin: 0.4rem 0 0.2rem;
            }

            .not-found-desc {
                font-size: 0.9rem;
                margin-bottom: 0.6rem;
            }

            .not-found-buttons {
                flex-direction: column;
                gap: 0.5rem;
                margin-bottom: 0.6rem;
                align-items: center;
            }

            .btn-back,
            .btn-home {
                width: 100%;
                max-width: 180px;
                padding: 0.5rem 1rem;
                font-size: 0.9rem;
            }

            .not-found-quote {
                font-size: 0.8rem;
                margin-top: 0.6rem;
                padding: 0.5rem;
            }
        }

        @media (min-width: 481px) and (max-width: 768px) {
            .not-found-number {
                font-size: 4rem;
            }

            .not-found-title {
                font-size: 1.2rem;
            }

            .not-found-buttons {
                gap: 0.6rem;
            }

            .btn-back,
            .btn-home {
                padding: 0.5rem 1rem;
                font-size: 0.9rem;
            }
        }
    </style>
</BaseLayout>
